/* 浮动添加按钮 */

.floating-add-button {
    position: fixed;
    bottom: 80rpx;
    right: 32rpx;
    width: 112rpx;
    height: 112rpx;
    border-radius: 56rpx;
    background: #007aff;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8rpx 32rpx rgba(0, 122, 255, 0.35), 0 4rpx 12rpx rgba(0, 122, 255, 0.2);
    transition: all 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    z-index: 999;
    animation: floatIn 0.4s ease-out;
    backdrop-filter: blur(20rpx);
    -webkit-backdrop-filter: blur(20rpx);
}

.floating-add-button:active {
    transform: scale(0.94);
    box-shadow: 0 6rpx 24rpx rgba(0, 122, 255, 0.3), 0 2rpx 8rpx rgba(0, 122, 255, 0.15);
}

.floating-add-icon {
    width: 40rpx;
    height: 40rpx;
    filter: brightness(0) invert(1);
    transition: transform 0.2s ease;
}

.floating-add-button:active .floating-add-icon {
    transform: rotate(45deg) scale(0.9);
}


/* 浮动按钮动画 */

@keyframes floatIn {
    0% {
        opacity: 0;
        transform: scale(0.4) translateY(80rpx);
    }
    60% {
        opacity: 1;
        transform: scale(1.08) translateY(-12rpx);
    }
    100% {
        opacity: 1;
        transform: scale(1) translateY(0);
    }
}


/* 动画效果 */

.fade-in {
    animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20rpx);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}