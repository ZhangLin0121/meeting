/* Apple iOS 风格（与其余页面一致的明亮主题） */
.admin-root { min-height: 100vh; position: relative; font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', system-ui, sans-serif; background: #f6f7fb; }

/* 顶部导航已移除，保留返回按钮样式复用 */
.nav-back { width: 32rpx; height: 32rpx; }

/* 搜索条（浅色玻璃） */
.search-bar { position: fixed; left: 16rpx; right: 16rpx; height: 68rpx; display: flex; align-items: center; padding: 0 14rpx; border-radius: 14rpx; backdrop-filter: blur(10rpx); -webkit-backdrop-filter: blur(10rpx); background: rgba(255,255,255,0.92); box-shadow: 0 6rpx 14rpx rgba(17,24,39,0.05); border: 1px solid rgba(0,0,0,0.04); z-index: 9; }
.hero-gap { display: none; }
.search-icon { width: 36rpx; height: 36rpx; opacity: .6; }
.search-input { flex: 1; margin-left: 14rpx; color: #1c1c1e; font-size: 28rpx; }
.search-input::placeholder { color: #8e8e93; }
.search-clear { width: 52rpx; height: 52rpx; display: flex; align-items: center; justify-content: center; }
.clear-icon { width: 32rpx; height: 32rpx; opacity: .7; }
.floating-back { position: fixed; left: 16rpx; width: 64rpx; height: 64rpx; border-radius: 32rpx; background: rgba(255,255,255,0.92); box-shadow: 0 8rpx 18rpx rgba(15,23,42,0.08); display: flex; align-items: center; justify-content: center; z-index: 10; }

/* 顶部选项卡 */
.tabs { position: fixed; left: 0; right: 0; z-index: 11; display: flex; gap: 12rpx; padding: 8rpx 24rpx; background: rgba(255,255,255,0.96); backdrop-filter: blur(10rpx); border-bottom: 0.5px solid rgba(0,0,0,0.05); box-shadow: 0 6rpx 18rpx rgba(17,24,39,0.05); }
.tab { flex: 0 0 auto; padding: 12rpx 20rpx; border-radius: 999px; color: #4b5563; background: #f1f5f9; font-size: 26rpx; }
.tab.active { color: #0b61d8; background: #e5edff; box-shadow: none; border: 1px solid #c5d5ff; }

/* 内容区域 */
.content { min-height: 100vh; }
.stats-row { display: flex; align-items: center; justify-content: space-between; padding: 24rpx 24rpx 8rpx; }
.stats-text { color: #8e8e93; font-size: 26rpx; }
.stats-actions { display: flex; gap: 12rpx; align-items: center; }

/* 按钮 */
.btn { padding: 16rpx 24rpx; border-radius: 14rpx; font-size: 26rpx; line-height: 1; }
.btn.ghost { color: #0b61d8; border: 1px solid rgba(11,97,216,.18); background: rgba(11,97,216,.06); }
.btn.primary { color: #0b61d8; background: #e5edff; border: 1px solid #c5d5ff; box-shadow: none; }

/* 骨架屏（浅色） */
.skeleton-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 16rpx; padding: 24rpx; }
.skeleton-card { background: #ffffff; border: 1px solid rgba(0,0,0,0.06); border-radius: 20rpx; padding: 14rpx; }
.sk-img { height: 220rpx; border-radius: 16rpx; background: linear-gradient(90deg, rgba(0,0,0,.04), rgba(0,0,0,.08), rgba(0,0,0,.04)); animation: shine 1.2s linear infinite; }
.sk-line { height: 24rpx; margin-top: 16rpx; border-radius: 12rpx; background: linear-gradient(90deg, rgba(0,0,0,.04), rgba(0,0,0,.08), rgba(0,0,0,.04)); animation: shine 1.2s linear infinite; }
.w70 { width: 70%; }
.w40 { width: 40%; }
@keyframes shine { 0% { background-position-x: 0; } 100% { background-position-x: 200%; } }

/* 网格卡片（浅色卡片） */
.grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 20rpx; padding: 20rpx; }
.grid.single { grid-template-columns: 1fr; }
.card { background: #ffffff; border-radius: 22rpx; overflow: hidden; box-shadow: 0 12rpx 32rpx rgba(15,23,42,0.08); border: 1px solid rgba(255,255,255,0.7); transition: transform 0.15s ease, box-shadow 0.15s ease; }
.card:active { transform: scale(0.98); box-shadow: 0 8rpx 24rpx rgba(15,23,42,0.12); }
.card.single { display: flex; gap: 16rpx; padding: 16rpx; }
.card-img-wrap { position: relative; height: 220rpx; }
.card.single .card-img-wrap { width: 42%; min-width: 280rpx; height: 240rpx; border-radius: 16rpx; overflow: hidden; }
.card-img { width: 100%; height: 100%; }
.img-overlay { position: absolute; inset: 0; background: linear-gradient(180deg, rgba(17,24,39,0) 35%, rgba(17,24,39,.25)); }
.chip { position: absolute; top: 12rpx; right: 12rpx; padding: 8rpx 14rpx; font-size: 22rpx; border-radius: 999px; color: #1f2937; background: rgba(255,255,255,0.92); border: 1px solid rgba(0,0,0,0.06); }
.chip.ok { color: #15803d; background: #f0fdf4; border-color: #bbf7d0; }
.chip.busy { color: #b45309; background: #fff7ed; border-color: #fed7aa; }
.chip.closed { color: #b91c1c; background: #fef2f2; border-color: #fecdd3; }
.card-body { padding: 12rpx; }
.card.single .card-body { padding: 10rpx 6rpx 10rpx 0; display: flex; flex-direction: column; justify-content: space-between; }
.name { display: block; color: #1c1c1e; font-size: 30rpx; font-weight: 600; max-width: 100%; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; margin-bottom: 6rpx; }
.card.single .name { font-size: 32rpx; max-width: 100%; white-space: normal; }
.meta-row { display: flex; align-items: center; gap: 8rpx; }
.meta { display: flex; align-items: center; gap: 6rpx; color: #515154; font-size: 22rpx; min-width: 0; }
.meta .loc { max-width: 180rpx; }
.icon { width: 28rpx; height: 28rpx; opacity: .85; }
.loc { color: #6b7280; font-size: 24rpx; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
.card.single .loc { white-space: normal; }
.icon.loc { width: 24rpx; height: 24rpx; opacity: .6; }

.empty { padding: 80rpx 0; display: flex; flex-direction: column; align-items: center; }
.empty-icon { width: 200rpx; height: 200rpx; opacity: .6; }
.empty-title { color: #1c1c1e; font-size: 30rpx; margin-top: 12rpx; }
.empty-sub { color: #8e8e93; font-size: 24rpx; margin-top: 6rpx; }
.bottom-space { height: 160rpx; }

/* 浮动按钮（iOS样式） */
.fab { position: fixed; right: 36rpx; bottom: 48rpx; width: 112rpx; height: 112rpx; border-radius: 999px; display: flex; align-items: center; justify-content: center; background: #0b61d8; box-shadow: 0 14rpx 34rpx rgba(11,97,216,.28); z-index: 30; }
.fab-icon { width: 48rpx; height: 48rpx; }

/* Bottom Sheet （浅色）*/
.sheet-mask { position: fixed; inset: 0; z-index: 40; background: rgba(0,0,0,.35); display: flex; align-items: flex-end; }
.sheet { width: 100%; max-width: 100vw; box-sizing: border-box; background: #ffffff; border-top-left-radius: 22rpx; border-top-right-radius: 22rpx; transform: translateY(100%); transition: transform .24s ease; border-top: 1px solid rgba(0,0,0,.04); box-shadow: 0 -10rpx 28rpx rgba(0,0,0,.06); }
.sheet.visible { transform: translateY(0); }
.sheet-header { position: relative; display: flex; align-items: center; justify-content: space-between; padding: 12rpx 16rpx 10rpx; border-bottom: 1px solid rgba(0,0,0,.05); }
.sheet-grabber { position: absolute; top: 6rpx; left: 50%; transform: translateX(-50%); width: 72rpx; height: 6rpx; border-radius: 999px; background: rgba(0,0,0,.10); }
.sheet-title { color: #1c1c1e; font-size: 15px; font-weight: 600; margin: 6rpx auto 0; text-align: center; }
.sheet-close .close-icon { width: 40rpx; height: 40rpx; opacity: .7; }
.sheet-body { max-height: 60vh; padding: 20rpx; box-sizing: border-box; background: #ffffff; }
.sheet-footer { display: flex; gap: 12rpx; padding: 12rpx 16rpx 16rpx; border-top: 1px solid rgba(0,0,0,.05); }
.sheet-footer .btn { font-size: 15px; padding: 12rpx 18rpx; border-radius: 12rpx; }
.sheet-footer .btn.primary { color: #0b61d8; background: #e5edff; border: 1px solid #c5d5ff; box-shadow: none; }

/* 表单（浅色） */
.form-section { margin-top: 16rpx; }
.form-section:first-child { margin-top: 0; }
.section-header { display: flex; align-items: baseline; justify-content: space-between; margin-bottom: 10rpx; padding: 0 4rpx; }
.section-title { font-size: 16px; color: #0f172a; font-weight: 700; letter-spacing: 0.2px; }
.section-caption { font-size: 12px; color: #a0aec0; }
.form-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280rpx, 1fr)); gap: 12rpx; }
.form-item { margin: 0; padding: 16rpx; border-radius: 14rpx; background: #ffffff; border: 1px solid #edf1f7; box-shadow: 0 6rpx 20rpx rgba(15,23,42,0.04); }
.form-item.span-2 { grid-column: 1 / -1; }
.form-row { display: flex; justify-content: space-between; gap: 14rpx; }
.form-item.half { flex: 1; min-width: 0; }
.label { display: block; color: #111827; font-size: 15px; margin-bottom: 10rpx; font-weight: 600; letter-spacing: 0.2px; }
.label-row { display: flex; align-items: baseline; justify-content: space-between; gap: 8rpx; margin-bottom: 10rpx; }
.label-hint { font-size: 12px; color: #a0aec0; }
.input { width: 100%; min-width: 0; height: 64rpx; border-radius: 12rpx; border: 1px solid #d9dfee; background: #ffffff; color: #0f172a; padding: 0 16rpx; box-sizing: border-box; font-size: 15px; transition: border-color 0.15s ease, box-shadow 0.15s ease; }
.input:focus { border-color: #b7c6ff; box-shadow: 0 0 0 3rpx rgba(183,198,255,0.35); }
.textarea { width: 100%; min-width: 0; min-height: 150rpx; border-radius: 12rpx; border: 1px solid #d9dfee; background: #ffffff; color: #0f172a; padding: 16rpx; box-sizing: border-box; font-size: 15px; line-height: 1.5; transition: border-color 0.15s ease, box-shadow 0.15s ease; }
.textarea:focus { border-color: #b7c6ff; box-shadow: 0 0 0 3rpx rgba(183,198,255,0.35); }
.tags { display: flex; flex-wrap: wrap; margin: -4rpx; }
.tag { margin: 4rpx; padding: 8rpx 12rpx; border-radius: 10rpx; color: #475569; border: 1px solid rgba(148,163,184,0.4); background: #ffffff; display: inline-flex; align-items: center; gap: 6rpx; font-size: 13px; }
.tag .tag-text { color: inherit; }
.tag .tag-text { font-size: 13px; }
.tag.sel { color: #0b61d8; background: #e5edff; border-color: #c5d5ff; box-shadow: none; }
.tag.sel .tag-text { color: #0b61d8; font-weight: 600; }
.form-item.tag-card { padding-bottom: 8rpx; }
.form-item.media-card { padding-bottom: 18rpx; }
.tag-check { font-size: 14px; font-weight: 700; line-height: 1; }
.tag-hover { background: rgba(0,0,0,0.06); }
.img-uploader { width: 100%; height: 220rpx; border-radius: 16rpx; border: 1px dashed #d6d9e7; background: #fbfcff; display: flex; align-items: center; justify-content: center; overflow: hidden; box-sizing: border-box; transition: border-color 0.2s ease, background 0.2s ease; }
.img-uploader:active { border-color: #bbc8ff; background: #f2f6ff; }
.upload-hint { display: flex; flex-direction: column; align-items: center; gap: 4rpx; color: #94a3b8; font-size: 13px; }
.up-icon { width: 36rpx; height: 36rpx; opacity: .55; }
.preview { width: 100%; height: 100%; border-radius: 12rpx; }
/* 扩展样式 */
.btn.danger { color: #b91c1c; background: #fff; border: 1px solid #fca5a5; box-shadow: none; }
.tag-hover { background: rgba(0,0,0,0.05); }

/* 预约列表样式 */
.bookings { padding: 12rpx 24rpx 24rpx; }
.bookings-toolbar { display: flex; align-items: center; justify-content: space-between; padding: 8rpx 4rpx 12rpx; }
.bookings-toolbar .stats-text { color: #8e8e93; font-size: 24rpx; }
.bookings-toolbar .btn { padding: 12rpx 20rpx; border-radius: 12rpx; }
.b-cards { display: flex; flex-direction: column; gap: 16rpx; }
.b-card { background: #fff; border: 1px solid rgba(0,0,0,0.06); border-radius: 20rpx; padding: 24rpx; }
.b-top { display:flex; align-items:center; justify-content: space-between; }
.b-meta { display:flex; flex-direction:column; gap: 4rpx; }
.b-room { font-size: 30rpx; font-weight: 600; color: #1c1c1e; }
.b-loc { font-size: 24rpx; color:#6b7280; }
.b-chip { padding: 8rpx 14rpx; border-radius: 999px; font-size: 22rpx; color:#374151; background: #f3f4f6; border: 1px solid #e5e7eb; }
.b-chip.ok { color: #15803d; background: #f0fdf4; border-color: #bbf7d0; }
.b-chip.busy { color: #b45309; background: #fff7ed; border-color: #fed7aa; }
.b-chip.closed { color: #b91c1c; background: #fef2f2; border-color: #fecdd3; }
.b-chip.muted { color: #6b7280; background: #f4f5f7; border-color: #e5e7eb; }
.b-time { margin-top: 10rpx; display:flex; align-items:center; justify-content: space-between; }
.b-date,.b-range { font-size: 24rpx; color:#1f2937; font-weight: 600; }
.b-detail { margin-top: 10rpx; display:flex; flex-wrap: wrap; gap: 12rpx; }
.b-text { font-size: 24rpx; color:#3a3a3c; }
.b-actions { margin-top: 12rpx; display:flex; justify-content:flex-end; }
