.image-upload-container {
    margin-top: 16rpx;
}

.current-image-preview,
.new-image-preview {
    position: relative;
    border-radius: 12rpx;
    overflow: hidden;
    background-color: #f5f5f5;
    cursor: pointer;
    transition: all 0.3s ease;
}

.current-image-preview:active,
.new-image-preview:active {
