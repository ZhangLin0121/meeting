/* 会议室列表页面样式 - Apple Design风格 */


/* 全局重置和基础样式 - Apple Pro奢华风格 */

page {
    background: radial-gradient(ellipse at top, #fafafa 0%, #f5f5f7 50%, #efeff4 100%);
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', 'Helvetica Neue', 'PingFang SC', sans-serif;
    font-feature-settings: 'kern' 1, 'liga' 1, 'calt' 1;
}


/* 页面容器 */

.container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    background: radial-gradient(ellipse at top, #fafafa 0%, #f5f5f7 50%, #efeff4 100%);
    position: relative;
}

.container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 300rpx;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0) 100%);
    pointer-events: none;
}


/* 自定义导航栏 - Apple Pro钛金属质感 */

.custom-navbar {
    background: rgba(252, 252, 252, 0.92);
    backdrop-filter: blur(40rpx) saturate(300%) brightness(105%);
    -webkit-backdrop-filter: blur(40rpx) saturate(300%) brightness(105%);
    box-shadow: 0 0 0 0.5rpx rgba(255, 255, 255, 0.8) inset, 0 2rpx 24rpx rgba(0, 0, 0, 0.04), 0 1rpx 4rpx rgba(0, 0, 0, 0.02);
    position: sticky;
    top: 0;
    z-index: 100;
    border-bottom: 0.5rpx solid rgba(0, 0, 0, 0.05);
    position: relative;
}

.custom-navbar::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1rpx;
    background: linear-gradient(90deg, transparent 0%, rgba(0, 0, 0, 0.06) 50%, transparent 100%);
}

.navbar-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 16px;
    box-sizing: border-box;
    position: relative;
}

.navbar-title {
    font-size: 36rpx;
    font-weight: 600;
    color: #1d1d1f;
    letter-spacing: -0.6rpx;
    text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.9);
    flex: 1;
    text-align: center;
}

.navbar-right-icons {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    gap: 16px;
    z-index: 10;
}

.navbar-icon {
    width: 22px;
    height: 22px;
    opacity: 0.8;
    transition: all 0.25s ease-out;
}

.navbar-icon:active {
    opacity: 0.5;
    transform: scale(0.95);
}

.admin-icon-nav {
    width: 20px;
    height: 20px;
}


/* 搜索和筛选区域 - Apple Pro Studio质感 */

.search-filter-area {
    display: flex;
    align-items: center;
    padding: 28rpx 32rpx;
    background: rgba(253, 253, 253, 0.92);
    backdrop-filter: blur(40rpx) saturate(300%) brightness(105%);
    -webkit-backdrop-filter: blur(40rpx) saturate(300%) brightness(105%);
    border-bottom: 0.5rpx solid rgba(0, 0, 0, 0.04);
    box-sizing: border-box;
    position: relative;
}

.search-filter-area::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1rpx;
    background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.9) 50%, transparent 100%);
}

.sticky-header {
    position: sticky;
    z-index: 99;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06), 0 2rpx 16rpx rgba(0, 0, 0, 0.04), 0 0 0 0.5rpx rgba(255, 255, 255, 0.8) inset;
}

.search-input-wrapper {
    flex: 1;
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, rgba(235, 235, 245, 0.6) 0%, rgba(242, 242, 247, 0.4) 100%);
    border-radius: 28rpx;
    padding: 28rpx 36rpx;
    margin-right: 28rpx;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    border: 1.5rpx solid rgba(255, 255, 255, 0.8);
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04), 0 0 0 0.5rpx rgba(255, 255, 255, 0.5) inset;
}

.search-input-wrapper:focus-within {
    background: linear-gradient(135deg, rgba(235, 235, 245, 0.8) 0%, rgba(242, 242, 247, 0.6) 100%);
    transform: scale(1.02) translateY(-1rpx);
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08), 0 2rpx 8rpx rgba(0, 0, 0, 0.04), 0 0 0 2rpx rgba(0, 122, 255, 0.2), 0 0 0 0.5rpx rgba(255, 255, 255, 0.8) inset;
}

.search-icon-in-input {
    width: 32rpx;
    height: 32rpx;
    margin-right: 16rpx;
    opacity: 0.6;
}

.search-input {
    flex: 1;
    font-size: 30rpx;
    color: #1d1d1f;
    background-color: transparent;
    border: none;
    outline: none;
    font-weight: 400;
}

.search-placeholder {
    color: rgba(60, 60, 67, 0.6);
    font-size: 30rpx;
}

.filter-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background-color: transparent;
    border-radius: 22px;
    transition: all 0.25s ease-out;
}

.filter-button:active {
    background-color: rgba(0, 0, 0, 0.06);
    transform: scale(0.95);
}

.filter-icon {
    width: 20px;
    height: 20px;
    opacity: 0.7;
}

.filter-text {
    display: none;
    /* 隐藏文字，只显示图标 */
}


/* 会议室列表滚动区域 */

.room-list-scroll-view {
    flex: 1;
    padding: 24rpx 32rpx 40rpx;
    box-sizing: border-box;
}


/* 会议室卡片 - iOS 17风格 */

.room-card-wrapper {
    margin-bottom: 56rpx;
    opacity: 0;
    animation: slideInUp 0.8s cubic-bezier(0.23, 1, 0.32, 1) forwards;
    position: relative;
}

.room-card-wrapper::before {
    content: '';
    position: absolute;
    top: -8rpx;
    left: -8rpx;
    right: -8rpx;
    bottom: -8rpx;
    background: linear-gradient(145deg, rgba(255, 255, 255, 0.1) 0%, transparent 50%, rgba(0, 0, 0, 0.02) 100%);
    border-radius: 56rpx;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.room-card-wrapper:hover::before {
    opacity: 1;
}

.room-card {
    border-radius: 48rpx;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    position: relative;
    height: 600rpx;
    display: flex;
    flex-direction: column;
}


/* 叠层卡片特殊样式 */

.overlay-card {
    background: none;
}

.room-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(145deg, rgba(255, 255, 255, 0.1) 0%, transparent 50%, rgba(0, 0, 0, 0.02) 100%);
    border-radius: 48rpx;
    pointer-events: none;
}

.enhanced-shadow {
    box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.08), 0 8rpx 24rpx rgba(0, 0, 0, 0.06), 0 2rpx 8rpx rgba(0, 0, 0, 0.04), 0 0 0 1rpx rgba(255, 255, 255, 0.7) inset, 0 1rpx 0 rgba(255, 255, 255, 0.9) inset;
}

.room-card:active {
    transform: scale(0.97) translateY(2rpx);
    box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12), 0 4rpx 16rpx rgba(0, 0, 0, 0.08), 0 1rpx 4rpx rgba(0, 0, 0, 0.06), 0 0 0 1rpx rgba(255, 255, 255, 0.8) inset, 0 1rpx 0 rgba(255, 255, 255, 0.95) inset;
}


/* 背景图片容器 - 叠层设计 */

.room-background-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.room-background-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.room-background-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(235, 235, 245, 0.8) 0%, rgba(242, 242, 247, 0.6) 100%);
}

.room-default-background {
    width: 120rpx;
    height: 120rpx;
    opacity: 0.3;
}


/* 渐变遮罩层 */

.room-gradient-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient( 180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.1) 40%, rgba(0, 0, 0, 0.4) 70%, rgba(0, 0, 0, 0.7) 100%);
    z-index: 2;
}


/* 状态角标 */

.room-status-badge {
    position: absolute;
    top: 24rpx;
    right: 24rpx;
    z-index: 3;
    padding: 6rpx 14rpx;
    border-radius: 22rpx;
    backdrop-filter: blur(20rpx) saturate(180%);
    -webkit-backdrop-filter: blur(20rpx) saturate(180%);
    border: 1rpx solid rgba(255, 255, 255, 0.4);
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 0;
}

.badge-available {
    background: linear-gradient(135deg, rgba(52, 199, 89, 0.95) 0%, rgba(48, 176, 199, 0.9) 100%);
    box-shadow: 0 2rpx 8rpx rgba(52, 199, 89, 0.2), 0 1rpx 4rpx rgba(52, 199, 89, 0.12), 0 0 0 0.5rpx rgba(255, 255, 255, 0.3) inset;
}

.badge-unavailable {
    background: linear-gradient(135deg, rgba(255, 59, 48, 0.95) 0%, rgba(255, 149, 0, 0.9) 100%);
    box-shadow: 0 2rpx 8rpx rgba(255, 59, 48, 0.2), 0 1rpx 4rpx rgba(255, 59, 48, 0.12), 0 0 0 0.5rpx rgba(255, 255, 255, 0.3) inset;
}

.badge-text {
    font-size: 24rpx;
    font-weight: 600;
    color: #ffffff;
    text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.25);
    letter-spacing: -0.1rpx;
    line-height: 1.1;
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}


/* 背景图片加载状态 */

.background-loading-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(248, 248, 248, 0.95);
    backdrop-filter: blur(8rpx);
    -webkit-backdrop-filter: blur(8rpx);
    z-index: 2;
}

.background-loading-spinner {
    width: 48rpx;
    height: 48rpx;
    opacity: 0.7;
    animation: spin 1s linear infinite;
}


/* 底部信息叠层卡片 */

.room-info-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 3;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(30rpx) saturate(180%);
    -webkit-backdrop-filter: blur(30rpx) saturate(180%);
    border-top: 1rpx solid rgba(255, 255, 255, 0.6);
    border-radius: 0 0 48rpx 48rpx;
    padding: 40rpx 36rpx;
    box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.room-info-content {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
}


/* 叠层卡片文字样式 */

.room-name-overlay {
    font-size: 42rpx;
    font-weight: 700;
    color: #1d1d1f;
    letter-spacing: -0.8rpx;
    line-height: 1.2;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.enhanced-title {
    line-height: 1.25;
}

.text-ellipsis {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.room-meta-overlay {
    display: flex;
    align-items: center;
    gap: 28rpx;
}

.meta-item {
    display: flex;
    align-items: center;
    gap: 10rpx;
}

.meta-icon {
    font-size: 26rpx;
    opacity: 0.8;
}

.meta-text {
    font-size: 28rpx;
    color: rgba(60, 60, 67, 0.8);
    font-weight: 500;
}

.room-description-overlay {
    font-size: 30rpx;
    color: rgba(60, 60, 67, 0.85);
    line-height: 1.45;
    font-weight: 400;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

.text-multiline-ellipsis {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}


/* 加载状态 - iOS风格 */

.loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: rgba(247, 247, 247, 0.9);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    z-index: 999;
}

.loading-spinner {
    width: 32px;
    height: 32px;
    opacity: 0.6;
    animation: spin 1s linear infinite;
    margin-bottom: 16px;
}

.loading-text {
    font-size: 15px;
    color: rgba(60, 60, 67, 0.6);
    font-weight: 400;
}


/* 加载更多 */

.loading-more {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    gap: 8px;
}

.loading-more-spinner {
    width: 20px;
    height: 20px;
    opacity: 0.5;
    animation: spin 1s linear infinite;
}

.loading-more-text {
    font-size: 14px;
    color: rgba(60, 60, 67, 0.6);
    font-weight: 400;
}


/* 空状态 - Apple风格 */

.no-rooms-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60px 40px;
    min-height: 400px;
}

.empty-icon {
    width: 64px;
    height: 64px;
    opacity: 0.3;
    margin-bottom: 24px;
}

.empty-text {
    font-size: 17px;
    font-weight: 600;
    color: #1d1d1f;
    margin-bottom: 8px;
    text-align: center;
    letter-spacing: -0.2px;
}

.empty-subtext {
    font-size: 15px;
    color: rgba(60, 60, 67, 0.6);
    text-align: center;
    margin-bottom: 24px;
    font-weight: 400;
}

.clear-search-button {
    background-color: #007aff;
    color: #ffffff;
    padding: 12px 24px;
    border-radius: 8px;
    font-size: 15px;
    font-weight: 500;
    transition: all 0.25s ease-out;
}

.clear-search-button:active {
    background-color: #0056d3;
    transform: scale(0.98);
}

.clear-search-text {
    color: #ffffff;
    font-size: 15px;
    font-weight: 500;
}


/* 管理员入口按钮 - iOS蓝色渐变 */

.admin-entry-wrapper {
    position: fixed;
    bottom: 24px;
    right: 24px;
    z-index: 50;
}

.admin-entry-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, #007aff 0%, #5856d6 100%);
    border-radius: 28px;
    transition: all 0.25s ease-out;
}

.enhanced-admin-button {
    box-shadow: 0 8px 25px rgba(0, 122, 255, 0.3);
}

.admin-entry-button:active {
    transform: scale(0.95);
    box-shadow: 0 12px 30px rgba(0, 122, 255, 0.4);
}

.admin-icon {
    width: 24px;
    height: 24px;
    filter: brightness(0) invert(1);
    /* 转为白色 */
}

.admin-text {
    display: none;
    /* 圆形按钮隐藏文字 */
}


/* 动画效果 */

@keyframes spin {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}

@keyframes fade-in {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes slide-in-up {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes slideInUp {
    from {
        opacity: 0;
        transform: translateY(60rpx) scale(0.95);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.fade-in {
    animation: fade-in 0.6s ease-out;
}

.slide-in-up {
    animation: slide-in-up 0.5s ease-out forwards;
}


/* 响应式优化 */

@media (max-width: 375px) {
    .room-card {
        border-radius: 16px;
    }
    .room-image-container {
        width: 100px;
        height: 100px;
        border-radius: 12px;
        margin: 6px;
    }
    .room-info {
        padding: 16px 12px 16px 16px;
    }
    .navbar-content {
        padding: 0 16px;
    }
    .search-filter-area {
        padding: 10px 16px;
    }
    .room-list-scroll-view {
        padding: 16px 16px 16px;
    }
}