/* 🎨 Apple iOS Design System - 会议室列表页面 */

.ios-navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    background: rgba(248, 248, 248, 0.8);
    border-bottom: 0.5px solid rgba(0, 0, 0, 0.12);
}

.navbar-content {
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
}

.nav-left,
.nav-right {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.nav-button {
    width: 30px;
    height: 30px;
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.05);
    transition: all 0.2s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.nav-button:active {
    background: rgba(0, 0, 0, 0.15);
    transform: scale(0.9);
}

.nav-icon {
    width: 18px;
    height: 18px;
}

.nav-title {
    font-size: 17px;
    font-weight: 600;
    color: #1c1c1e;
    letter-spacing: -0.4px;
}

@media (prefers-color-scheme: dark) {
    .ios-navbar {
        background: rgba(28, 28, 30, 0.8);
        border-bottom: 0.5px solid rgba(255, 255, 255, 0.12);
    }
    .nav-title {
        color: #ffffff;
    }
    .nav-button {
        background: rgba(255, 255, 255, 0.1);
    }
    .nav-button:active {
        background: rgba(255, 255, 255, 0.2);
    }
}


/* ==================== 基础容器 ==================== */

.ios-app-container {
    min-height: 100vh;
    /* 使用更简洁的纯色背景，减少"容器感" */
    background: #f8f9fa;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', system-ui, sans-serif;
}

.content-wrapper {
    /* 减少底部padding */
    padding-bottom: 40px;
}


/* ==================== 搜索区域 ==================== */

.search-section {
    position: fixed;
    left: 0;
    right: 0;
    z-index: 900;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    /* 使用与主背景一致的颜色，减少分层感 */
    background: rgba(248, 249, 250, 0.95);
    /* 移除边框，让搜索区域更融入页面 */
    border-bottom: none;
    padding: 12px 16px;
    display: flex;
    align-items: center;
    gap: 12px;
}

.search-bar {
    flex: 1;
    background: rgba(118, 118, 128, 0.12);
    border-radius: 12px;
    padding: 0 12px;
    display: flex;
    align-items: center;
    gap: 8px;
    height: 36px;
}

.search-icon {
    width: 16px;
    height: 16px;
}

.search-input {
    flex: 1;
    font-size: 16px;
    color: #1c1c1e;
    background: transparent;
    border: none;
    outline: none;
}

.search-placeholder {
    color: #8e8e93;
}

.clear-button {
    width: 20px;
    height: 20px;
    border-radius: 10px;
    background: #8e8e93;
    display: flex;
    align-items: center;
    justify-content: center;
}

.clear-button .sf-icon {
    font-size: 12px;
    color: white;
}

.filter-button {
    width: 36px;
    height: 36px;
    border-radius: 12px;
    background: rgba(0, 122, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.filter-button:active {
    background: rgba(0, 122, 255, 0.2);
    transform: scale(0.9);
}


/* ==================== 主要内容区域 ==================== */

.main-content {
    min-height: 100vh;
    /* 减少左右padding，让内容更贴近屏幕边缘 */
    padding: 0 4px 20px;
}

@media screen and (max-width: 768px) {
    .main-content {
        padding: 0 2px 20px;
    }
}


/* ==================== 会议室列表样式 ==================== */

.section-header {
    /* 减少上下边距，让内容更紧凑 */
    margin: 16px 12px 12px;
}

.section-title {
    font-size: 20px;
    font-weight: 700;
    color: #1c1c1e;
    margin-bottom: 4px;
}

.section-subtitle {
    font-size: 14px;
    color: #8e8e93;
}


/* ==================== 状态页面 ==================== */

.loading-view,
.empty-view {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
}

.ios-activity-indicator,
.empty-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.spinner {
    width: 28px;
    height: 28px;
    border: 2px solid #f3f3f3;
    border-top: 2px solid #007AFF;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

.loading-label {
    margin-top: 12px;
    font-size: 16px;
    color: #8e8e93;
}

.empty-content {
    padding: 40px 20px;
}

.empty-icon {
    width: 80px;
    height: 80px;
    margin-bottom: 20px;
    opacity: 0.6;
}

.empty-image {
    width: 100%;
    height: 100%;
}

.empty-title {
    font-size: 18px;
    font-weight: 600;
    color: #1c1c1e;
    margin-bottom: 8px;
}

.empty-subtitle {
    font-size: 14px;
    color: #8e8e93;
    margin-bottom: 20px;
}

.ios-button {
    background: #007AFF;
    color: white;
    border: none;
    border-radius: 12px;
    padding: 12px 24px;
    font-size: 16px;
    font-weight: 600;
    transition: all 0.2s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.ios-button.secondary {
    background: rgba(0, 122, 255, 0.1);
    color: #007AFF;
}

.ios-button:active {
    transform: scale(0.95);
}


/* ==================== 会议室列表 ==================== */

.room-list {
    /* 移除固定高度限制，让列表自然展开 */
    min-height: calc(100vh - 200px);
    margin-top: 16px;
}

.room-grid {
    display: grid;
    /* 减少卡片间距，让布局更紧凑 */
    gap: 12px;
    /* 减少左右padding，让列表更接近屏幕边缘 */
    padding: 0 8px;
}

.room-card-wrapper {
    transition: all 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.room-card-wrapper:active {
    transform: scale(0.98);
}

.room-card {
    background: white;
    /* 减少圆角，看起来不那么"盒子化" */
    border-radius: 16px;
    overflow: hidden;
    /* 减少阴影效果，让卡片更自然 */
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    /* 移除边框，让卡片更简洁 */
    border: none;
}

.room-image-container {
    position: relative;
    height: 180px;
    overflow: hidden;
}

.room-image,
.room-image-placeholder {
    width: 100%;
    height: 100%;
}

.room-image-placeholder {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    display: flex;
    align-items: center;
    justify-content: center;
}

.placeholder-icon {
    width: 40px;
    height: 40px;
    opacity: 0.4;
}

.status-chip {
    position: absolute;
    padding: 6px 12px;
    border-radius: 20px;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    font-size: 12px;
    font-weight: 600;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.image-status-chip {
    top: 12px;
    right: 12px;
}

.status-chip.available {
    background: rgba(52, 199, 89, 0.9);
    color: white;
}

.status-chip.occupied {
    background: rgba(255, 59, 48, 0.9);
    color: white;
}

.room-info {
    padding: 20px;
}

.room-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 12px;
}

.room-name {
    font-size: 18px;
    font-weight: 700;
    color: #1c1c1e;
    line-height: 1.3;
    flex: 1;
    margin-right: 12px;
}

.capacity-badge {
    display: flex;
    align-items: center;
    gap: 4px;
    background: rgba(0, 122, 255, 0.1);
    padding: 6px 10px;
    border-radius: 12px;
    flex-shrink: 0;
}

.capacity-icon {
    width: 14px;
    height: 14px;
}

.capacity-text {
    font-size: 12px;
    font-weight: 600;
    color: #007AFF;
}

.room-location {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-bottom: 12px;
}

.location-icon {
    width: 14px;
    height: 14px;
}

.location-text {
    font-size: 14px;
    color: #8e8e93;
}

.room-description {
    font-size: 14px;
    color: #6c6c70;
    line-height: 1.4;
    /* 精简版：减少底部边距 */
    margin-bottom: 12px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}


/* 设备标签 */

.equipment-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    /* 精简版：减少底部边距 */
    margin-bottom: 8px;
}

.equipment-tag {
    background: rgba(116, 116, 128, 0.08);
    border: 1px solid rgba(116, 116, 128, 0.16);
    border-radius: 8px;
    padding: 4px 8px;
}

.equipment-text {
    font-size: 11px;
    color: #6c6c70;
    font-weight: 500;
}


