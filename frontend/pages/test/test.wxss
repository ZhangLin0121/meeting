/* pages/test/test.wxss */

.container {
    padding: 40rpx;
    background-color: #f5f5f5;
    min-height: 100vh;
}

.header {
    text-align: center;
    margin-bottom: 60rpx;
}

.title {
    display: block;
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
}

.subtitle {
    display: block;
    font-size: 28rpx;
    color: #666;
}

.actions {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
    margin-bottom: 60rpx;
}

.btn-primary {
    background-color: #007aff;
    color: white;
    border: none;
    border-radius: 12rpx;
    padding: 24rpx;
    font-size: 32rpx;
}

.btn-primary[disabled] {
    background-color: #ccc;
}

.btn-secondary {
    background-color: white;
    color: #007aff;
    border: 2rpx solid #007aff;
    border-radius: 12rpx;
    padding: 24rpx;
    font-size: 28rpx;
}

.test-results {
    background-color: white;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.result-item {
    padding: 32rpx;
    border-bottom: 1rpx solid #eee;
}

.result-item:last-child {
    border-bottom: none;
}

.result-header {
    display: flex;
    align-items: center;
    margin-bottom: 16rpx;
}

.result-icon {
    font-size: 32rpx;
    margin-right: 16rpx;
}

.result-name {
    flex: 1;
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

.result-time {
    font-size: 24rpx;
    color: #999;
}

.result-message {
    font-size: 28rpx;
    padding: 16rpx;
    border-radius: 8rpx;
    background-color: #f8f8f8;
}

.result-message.success {
    color: #52c41a;
    background-color: #f6ffed;
    border: 1rpx solid #b7eb8f;
}

.result-message.error {
    color: #ff4d4f;
    background-color: #fff2f0;
    border: 1rpx solid #ffccc7;
}

.loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 80rpx;
    color: #666;
}

.loading-spinner {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid #eee;
    border-top: 4rpx solid #007aff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 32rpx;
}

@keyframes spin {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

.empty {
    text-align: center;
    padding: 80rpx;
    color: #999;
    font-size: 28rpx;
}