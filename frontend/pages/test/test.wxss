/* pages/test/test.wxss */

.container {
    padding: 20rpx;
    background-color: #f5f7fa;
    min-height: 100vh;
}


/* 页面标题 */

.page-title {
    text-align: center;
    margin-bottom: 30rpx;
    padding: 20rpx;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 16rpx;
    color: white;
}

.title-text {
    font-size: 36rpx;
    font-weight: bold;
    display: block;
    margin-bottom: 10rpx;
}

.subtitle-text {
    font-size: 24rpx;
    opacity: 0.9;
}


/* 微信授权规范提示 */

.notice-card {
    background: #fff3cd;
    border: 1px solid #ffeaa7;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
}

.notice-title {
    font-size: 28rpx;
    font-weight: bold;
    color: #856404;
    margin-bottom: 10rpx;
}

.notice-content {
    font-size: 24rpx;
    line-height: 1.6;
    color: #856404;
}


/* 状态卡片 */

.status-cards {
    display: flex;
    gap: 20rpx;
    margin-bottom: 20rpx;
}

.status-card {
    flex: 1;
    background: white;
    border-radius: 12rpx;
    padding: 20rpx;
    text-align: center;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.status-label {
    font-size: 24rpx;
    color: #666;
    margin-bottom: 8rpx;
}

.status-value {
    font-size: 26rpx;
    font-weight: bold;
}

.status-value.success {
    color: #27ae60;
}

.status-value.warning {
    color: #f39c12;
}

.status-value.error {
    color: #e74c3c;
}


/* 用户信息卡片 */

.user-info-card {
    background: white;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-title {
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 15rpx;
}

.user-detail {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
}

.user-detail:last-child {
    border-bottom: none;
}

.user-detail .label {
    font-size: 24rpx;
    color: #666;
}

.user-detail .value {
    font-size: 24rpx;
    color: #333;
    font-weight: 500;
}


/* 测试区域 */

.test-section {
    background: white;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
}


/* 测试项 */

.test-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
}

.test-item:last-child {
    border-bottom: none;
}

.test-info {
    flex: 1;
}

.test-name {
    font-size: 26rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 4rpx;
}

.test-desc {
    font-size: 22rpx;
    color: #666;
}

.test-btn {
    background: #007aff;
    color: white;
    border: none;
    border-radius: 8rpx;
    padding: 12rpx 24rpx;
    font-size: 24rpx;
    min-width: 120rpx;
}

.test-btn:disabled {
    background: #ccc;
    color: #666;
}


/* 头像预览 */

.avatar-preview {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
    background: #f8f9fa;
    border-radius: 12rpx;
    margin: 15rpx 0;
}

.avatar-image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    margin-bottom: 10rpx;
}

.avatar-desc {
    font-size: 22rpx;
    color: #666;
}


/* 用户信息预览 */

.userinfo-preview {
    background: #f8f9fa;
    border-radius: 12rpx;
    padding: 15rpx;
    margin: 15rpx 0;
}

.userinfo-item {
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
}

.userinfo-item:last-child {
    margin-bottom: 0;
}

.info-label {
    font-size: 24rpx;
    color: #666;
    margin-right: 10rpx;
    min-width: 80rpx;
}

.info-value {
    font-size: 24rpx;
    color: #333;
}

.info-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
}


/* 测试按钮组 */

.test-buttons {
    display: flex;
    flex-direction: column;
    gap: 15rpx;
}

.action-btn {
    background: white;
    border: 2rpx solid #007aff;
    color: #007aff;
    border-radius: 8rpx;
    padding: 18rpx 32rpx;
    font-size: 26rpx;
    text-align: center;
}

.action-btn.primary {
    background: #007aff;
    color: white;
}

.action-btn:active {
    opacity: 0.8;
}


/* 测试结果区域 */

.results-section {
    background: white;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.results-list {
    max-height: 600rpx;
    overflow-y: auto;
}

.result-item {
    display: flex;
    align-items: flex-start;
    padding: 15rpx;
    margin-bottom: 10rpx;
    border-radius: 8rpx;
    background: #f8f9fa;
}

.result-item.success {
    background: #d4edda;
    border-left: 4rpx solid #27ae60;
}

.result-item.error {
    background: #f8d7da;
    border-left: 4rpx solid #e74c3c;
}

.result-item.info {
    background: #d1ecf1;
    border-left: 4rpx solid #007aff;
}

.result-status {
    margin-right: 10rpx;
    font-size: 24rpx;
}

.result-content {
    flex: 1;
}

.result-name {
    font-size: 26rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 4rpx;
}

.result-message {
    font-size: 22rpx;
    color: #666;
    line-height: 1.4;
    margin-bottom: 4rpx;
}

.result-time {
    font-size: 20rpx;
    color: #999;
}


/* 日志区域 */

.logs-section {
    background: white;
    border-radius: 12rpx;
    padding: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15rpx;
}

.clear-btn {
    background: #f39c12;
    color: white;
    border: none;
    border-radius: 6rpx;
    padding: 8rpx 16rpx;
    font-size: 22rpx;
}

.logs-container {
    max-height: 400rpx;
    overflow-y: auto;
    background: #f8f9fa;
    border-radius: 8rpx;
    padding: 10rpx;
}

.log-item {
    margin-bottom: 8rpx;
    padding: 8rpx;
    background: white;
    border-radius: 6rpx;
    border-left: 3rpx solid #007aff;
}

.log-text {
    font-size: 20rpx;
    color: #333;
    font-family: 'Monaco', 'Menlo', 'Consolas', monospace;
    line-height: 1.4;
}


/* 滚动条样式 */

::-webkit-scrollbar {
    width: 6rpx;
}

::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 3rpx;
}

::-webkit-scrollbar-thumb {
    background: #007aff;
    border-radius: 3rpx;
}

::-webkit-scrollbar-thumb:hover {
    background: #0056b3;
}