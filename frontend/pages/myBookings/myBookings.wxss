/* frontend/pages/myBookings/myBookings.wxss */

.container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    background-color: #f7f7f7;
    padding-bottom: 40rpx;
    /* 底部留白 */
}

.header {
    background-color: #4A90E2;
    color: white;
    padding: 40rpx 30rpx 20rpx;
    text-align: center;
    position: sticky;
    top: 0;
    z-index: 10;
}

.title {
    font-size: 38rpx;
    font-weight: bold;
}

.loading-tips,
.empty-tips,
.error-tips {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 80rpx 0;
    color: #888;
    font-size: 28rpx;
}

.primary-button {
    margin-top: 40rpx;
    background-color: #4A90E2;
    color: white;
    padding: 15rpx 60rpx;
    border-radius: 50rpx;
    font-size: 30rpx;
    border: none;
}

.error-tips button {
    margin-top: 20rpx;
    color: #4A90E2;
    border: 1px solid #4A90E2;
    background-color: white;
    border-radius: 10rpx;
    padding: 10rpx 30rpx;
}

.booking-list-scroll {
    flex: 1;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin: 30rpx 0 20rpx 10rpx;
}

.booking-cards-container {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
    /* 卡片之间的间距 */
}

.booking-card {
    background-color: #fff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
    overflow: hidden;
    display: flex;
    align-items: center;
    padding: 20rpx;
    position: relative;
    /* 用于状态标签定位 */
}

.booking-card.past-booking {
    opacity: 0.8;
    /* 历史预约可以稍微透明一些 */
}

.card-image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 12rpx;
    margin-right: 25rpx;
    flex-shrink: 0;
    /* 防止图片被压缩 */
    background-color: #f0f0f0;
}

.card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding-right: 120rpx;
    /* 给状态标签留出空间 */
}

.card-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 15rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.card-row {
    display: flex;
    align-items: baseline;
    margin-bottom: 8rpx;
    font-size: 28rpx;
    color: #666;
}

.card-label {
    font-weight: bold;
    margin-right: 10rpx;
    min-width: 80rpx;
    /* 保证标签对齐 */
}

.card-value {
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.card-status {
    position: absolute;
    top: 25rpx;
    right: 25rpx;
    padding: 10rpx 20rpx;
    border-radius: 8rpx;
    font-size: 26rpx;
    font-weight: bold;
    color: white;
    min-width: 120rpx;
    text-align: center;
}

.status-upcoming {
    background-color: #4A90E2;
    /* 蓝色 */
}

.status-in-progress {
    background-color: #F5A623;
    /* 橙色 */
}

.status-completed {
    background-color: #9B9B9B;
    /* 灰色 */
}

.status-cancelled {
    background-color: #D0021B;
    /* 红色 */
}