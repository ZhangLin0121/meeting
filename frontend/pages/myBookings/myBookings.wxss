/* 简洁风格：降低渐变和高饱和度 */
page { background: #f6f7fb; font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', system-ui, sans-serif; }
.bookings-root { min-height: 100vh; }

.ios-navbar { position: fixed; top: 0; left:0; right:0; z-index: 1000; backdrop-filter: blur(16px); -webkit-backdrop-filter: blur(16px); background: rgba(248,248,248,0.9); border-bottom: 0.5px solid rgba(0,0,0,0.06); }
.navbar-content { height: 44px; display: flex; align-items: center; justify-content: space-between; padding: 0 20rpx; }
.nav-left,.nav-right { width: 44px; height: 44px; display:flex; align-items:center; justify-content:center; }
.nav-button { width: 30px; height: 30px; border-radius: 15px; display:flex; align-items:center; justify-content:center; background: #eef1f5; }
.nav-icon { width: 18px; height: 18px; }
.nav-title { font-size: 17px; font-weight: 600; color: #111827; letter-spacing: -0.2px; }

.main-content { min-height: 100vh; padding: 14px 14px 24px; }

/* Filter */
.filter-bar { display:flex; align-items:center; gap: 8px; padding: 6px 6px 10px; }
.filter-tab { flex:1; text-align:center; padding: 8px 6px; border-radius: 10px; background:#eef2f7; color:#6b7280; font-size: 14px; }
.filter-tab.active { background: #1d4ed8; color:#fff; font-weight: 600; }

/* States */
.state { display:flex; align-items: center; justify-content:center; min-height: 60vh; }
.state-card { display:flex; flex-direction:column; align-items:center; text-align:center; max-width: 280px; }
.state-icon { width: 56px; height: 56px; margin-bottom: 16px; opacity:.6; }
.state-title { font-size: 18px; font-weight: 600; color:#1c1c1e; margin-bottom: 6px; }
.state-sub { font-size: 14px; color:#8e8e93; margin-bottom: 16px; }

/* Lists */
.booking-scroll,.scroll { height: calc(100vh - 100px); }
.section { margin: 12px 6px 18px; }
.section.highlight { animation: flashBg .9s ease; }
@keyframes flashBg { 0% { background: rgba(10,132,255,.08); } 100% { background: transparent; } }
.section-header { display:flex; align-items:center; justify-content: space-between; margin-bottom: 8px; }
.section-title { font-size: 14px; color:#6b7280; font-weight: 600; letter-spacing: .3px; text-transform: uppercase; }
.section-badge { color:#1f2937; background:#eef2f7; font-size: 12px; font-weight: 600; padding: 2px 8px; border-radius: 10px; border: 1px solid #e0e6ef; }
.section-badge.secondary { background: #f2f4f7; color: #6b7280; border-color: #e5e7eb; }

.cards { display:flex; flex-direction:column; gap: 8px; }
.card { background:#fff; border-radius: 16rpx; padding: 24rpx; border: 1px solid #e5e7ec; box-shadow: 0 6px 20px rgba(17,24,39,0.04); }
.card.dim { opacity: .8; }
.card-top { display:flex; align-items:center; justify-content: space-between; }
.room-meta { display:flex; flex-direction:column; gap: 2px; }
.room-name { font-size: 16px; font-weight: 700; color:#111827; }
.room-loc { font-size: 12px; color:#6b7280; }
.chip { padding: 4px 8px; border-radius: 12px; font-size: 12px; font-weight: 600; border: 1px solid #e5e7ec; background: #f9fafb; color:#374151; }
.chip.ok { border-color: #22c55e; background: #f0fdf4; color: #15803d; }
.chip.warn { border-color: #ef4444; background: #fef2f2; color: #b91c1c; }
.chip.muted { border-color: #d1d5db; background: #f6f7fb; color:#6b7280; }

.time-row { display:flex; align-items:center; justify-content: space-between; margin-top: 8px; }
.time-date { font-size: 13px; color:#1f2937; font-weight: 600; }
.time-range { font-size: 13px; color:#1f2937; font-weight: 600; }
.details { margin-top: 8px; display:flex; flex-wrap: wrap; gap: 10px; }
.detail { font-size: 13px; color:#4b5563; }
.card-actions { margin-top: 10px; display:flex; justify-content:flex-end; }
.mini { font-size: 12px; padding: 6px 10px; border-radius: 10px; }
.mini.danger { background: #fff; color:#b91c1c; border: 1px solid #ef4444; }
.card-foot { margin-top: 8px; }
.foot-time { font-size: 12px; color:#6b7280; }

/* Media row with thumbnail */
.media-row { display:flex; gap: 12px; margin-top: 8px; }
.thumb { width: 88rpx; height: 88rpx; border-radius: 12rpx; background: #eef2f7; overflow: hidden; flex-shrink: 0; }
.media-info { flex: 1; min-width: 0; }

.loading-more { display:flex; align-items:center; justify-content:center; padding: 12px; gap: 10px; }
.mini-spinner { width: 16px; height: 16px; border: 2px solid #f3f3f3; border-top: 2px solid #64748b; border-radius: 50%; animation: spin 1s linear infinite; }
.loading-more-text { font-size: 14px; color:#6b7280; }
.bottom-space { height: 40px; }
@keyframes spin { from{transform:rotate(0)} to{transform:rotate(360deg)} }

/* 下面保留原有部分（如有其他样式引用） */

.booking-card:active {
    transform: scale(0.995);
    background: rgba(0, 0, 0, 0.02);
}

.booking-card.past {
    opacity: 0.65;
}


/* 卡片头部 - 极简设计 */

.card-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 10px;
}

.room-info {
    flex: 1;
}

.room-name {
    font-size: 17px;
    font-weight: 600;
    color: #1c1c1e;
    letter-spacing: -0.43px;
    margin-bottom: 1px;
    display: block;
}

.room-location {
    font-size: 13px;
    color: #8e8e93;
    font-weight: 400;
    letter-spacing: -0.08px;
}


/* 极简状态标签 */

.status-chip {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 3px 8px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: -0.06px;
}

.status-chip.active {
    background: rgba(52, 199, 89, 0.12);
    color: #30d158;
}

.status-chip.completed {
    background: rgba(142, 142, 147, 0.12);
    color: #8e8e93;
}

.status-chip.cancelled {
    background: rgba(255, 69, 58, 0.12);
    color: #ff453a;
}

.status-dot {
    width: 4px;
    height: 4px;
    border-radius: 2px;
    background: currentColor;
}


/* 时间区域 - 极简风格 */

.time-section {
    background: rgba(0, 122, 255, 0.05);
    border-radius: 8px;
    padding: 10px 12px;
    margin-bottom: 10px;
}

.time-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.time-date {
    font-size: 15px;
    font-weight: 500;
    letter-spacing: -0.24px;
}

.time-range {
    font-size: 15px;
    font-weight: 500;
    letter-spacing: -0.24px;
    font-variant-numeric: tabular-nums;
}


/* 详细信息 - 更简洁 */

.details-section {
    display: flex;
    flex-direction: column;
    gap: 6px;
    margin-bottom: 10px;
}

.detail-row {
    display: flex;
    align-items: center;
    gap: 8px;
}

.detail-icon {
    width: 14px;
    height: 14px;
    opacity: 0.6;
}

.detail-text {
    font-size: 15px;
    color: #3c3c43;
    font-weight: 400;
    letter-spacing: -0.24px;
    flex: 1;
}


/* 卡片底部 - 极简分隔线 */

.card-footer {
    border-top: 0.33px solid rgba(60, 60, 67, 0.08);
    padding-top: 10px;
}

.creation-time {
    font-size: 12px;
    color: #8e8e93;
    font-weight: 400;
    letter-spacing: -0.06px;
}


/* ==================== 加载更多 ==================== */

.load-more {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    margin: 12px 0;
}

.loading-more {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 15px;
    color: #8e8e93;
    letter-spacing: -0.24px;
}

.mini-spinner {
    width: 16px;
    height: 16px;
    border: 1.5px solid rgba(60, 60, 67, 0.1);
    border-top: 1.5px solid #007AFF;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

.load-more-text {
    font-size: 17px;
    color: #007AFF;
    font-weight: 400;
    letter-spacing: -0.43px;
}


/* ==================== 底部间距 ==================== */

.bottom-spacing {
    height: 32px;
}


/* ==================== 适配深色模式 ==================== */

@media (prefers-color-scheme: dark) {
    .apple-container {
        background: #000000;
    }
    .ios-navbar {
        background: rgba(0, 0, 0, 0.9);
        border-bottom-color: rgba(84, 84, 88, 0.2);
    }
    .nav-title {
        color: #ffffff;
    }
    .booking-card {
        background: #1c1c1e;
        border-color: rgba(84, 84, 88, 0.2);
    }
    .room-name {
        color: #ffffff;
    }
    .detail-text {
        color: #ebebf5;
    }
}
