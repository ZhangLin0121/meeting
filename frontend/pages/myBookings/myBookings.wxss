/* frontend/pages/myBookings/myBookings.wxss */


/* 🎨 Minimalist Apple Design - 我的预约页面 */


/* ==================== 根容器 ==================== */

.apple-container {
    min-height: 100vh;
    background: #f2f2f7;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}


/* ==================== iOS 导航栏 ==================== */

.ios-navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    background: rgba(242, 242, 247, 0.9);
    border-bottom: 0.33px solid rgba(60, 60, 67, 0.13);
}

.navbar-content {
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 16px;
}

.nav-left,
.nav-right {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.back-button,
.refresh-button {
    width: 32px;
    height: 32px;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.15s ease;
}

.back-button:active,
.refresh-button:active {
    background: rgba(0, 0, 0, 0.06);
}

.back-icon,
.refresh-icon {
    width: 20px;
    height: 20px;
    opacity: 0.6;
}

.nav-title {
    font-size: 17px;
    font-weight: 600;
    color: #1c1c1e;
    letter-spacing: -0.43px;
}

.rotating {
    animation: rotate 0.8s linear infinite;
}

@keyframes rotate {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}


/* ==================== 主要内容区域 ==================== */

.main-content {
    min-height: 100vh;
    padding: 24px 20px 32px;
}


/* ==================== 状态页面 ==================== */

.loading-state,
.error-state,
.empty-state {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
}

.ios-loading,
.error-content,
.empty-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 280px;
}


/* iOS 加载动画 */

.spinner {
    width: 24px;
    height: 24px;
    border: 2px solid rgba(60, 60, 67, 0.1);
    border-top: 2px solid #007AFF;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
    margin-bottom: 16px;
}

.loading-label {
    font-size: 15px;
    color: #8e8e93;
    font-weight: 400;
    letter-spacing: -0.24px;
}

@keyframes spin {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}


/* 错误和空状态 */

.error-symbol,
.empty-symbol {
    width: 56px;
    height: 56px;
    margin-bottom: 20px;
    opacity: 0.4;
}

.error-title,
.empty-title {
    font-size: 20px;
    font-weight: 600;
    color: #1c1c1e;
    margin-bottom: 8px;
    letter-spacing: -0.45px;
}

.error-message,
.empty-subtitle {
    font-size: 15px;
    color: #8e8e93;
    margin-bottom: 28px;
    line-height: 1.35;
    letter-spacing: -0.24px;
}


/* iOS 按钮 */

.ios-button {
    background: #007AFF;
    border: none;
    border-radius: 10px;
    padding: 11px 20px;
    font-size: 17px;
    font-weight: 500;
    color: white;
    letter-spacing: -0.43px;
    transition: all 0.15s ease;
}

.ios-button:active {
    background: #0051d5;
    transform: scale(0.98);
}


/* ==================== 预约列表 ==================== */

.booking-scroll {
    height: calc(100vh - 100px);
}

.section {
    margin-bottom: 28px;
}

.section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 8px;
    padding: 0 2px;
}

.section-title {
    font-size: 13px;
    font-weight: 600;
    color: #8e8e93;
    letter-spacing: 0.5px;
    text-transform: uppercase;
}

.section-badge {
    background: #007AFF;
    color: white;
    font-size: 13px;
    font-weight: 600;
    padding: 2px 7px;
    border-radius: 8px;
    min-width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    letter-spacing: -0.08px;
}

.section-badge.secondary {
    background: #8e8e93;
}


/* ==================== 极简卡片设计 ==================== */

.card-list {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.booking-card {
    background: white;
    border-radius: 12px;
    padding: 16px;
    border: 0.33px solid rgba(60, 60, 67, 0.08);
    transition: all 0.2s ease;
    position: relative;
}

.booking-card:active {
    transform: scale(0.995);
    background: rgba(0, 0, 0, 0.02);
}

.booking-card.past {
    opacity: 0.65;
}


/* 卡片头部 - 极简设计 */

.card-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 10px;
}

.room-info {
    flex: 1;
}

.room-name {
    font-size: 17px;
    font-weight: 600;
    color: #1c1c1e;
    letter-spacing: -0.43px;
    margin-bottom: 1px;
    display: block;
}

.room-location {
    font-size: 13px;
    color: #8e8e93;
    font-weight: 400;
    letter-spacing: -0.08px;
}


/* 极简状态标签 */

.status-chip {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 3px 8px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: -0.06px;
}

.status-chip.active {
    background: rgba(52, 199, 89, 0.12);
    color: #30d158;
}

.status-chip.completed {
    background: rgba(142, 142, 147, 0.12);
    color: #8e8e93;
}

.status-chip.cancelled {
    background: rgba(255, 69, 58, 0.12);
    color: #ff453a;
}

.status-dot {
    width: 4px;
    height: 4px;
    border-radius: 2px;
    background: currentColor;
}


/* 时间区域 - 极简风格 */

.time-section {
    background: rgba(0, 122, 255, 0.05);
    border-radius: 8px;
    padding: 10px 12px;
    margin-bottom: 10px;
}

.time-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.time-date {
    font-size: 15px;
    font-weight: 500;
    color: #007AFF;
    letter-spacing: -0.24px;
}

.time-range {
    font-size: 15px;
    font-weight: 500;
    color: #007AFF;
    letter-spacing: -0.24px;
    font-variant-numeric: tabular-nums;
}


/* 详细信息 - 更简洁 */

.details-section {
    display: flex;
    flex-direction: column;
    gap: 6px;
    margin-bottom: 10px;
}

.detail-row {
    display: flex;
    align-items: center;
    gap: 8px;
}

.detail-icon {
    width: 14px;
    height: 14px;
    opacity: 0.6;
}

.detail-text {
    font-size: 15px;
    color: #3c3c43;
    font-weight: 400;
    letter-spacing: -0.24px;
    flex: 1;
}


/* 卡片底部 - 极简分隔线 */

.card-footer {
    border-top: 0.33px solid rgba(60, 60, 67, 0.08);
    padding-top: 10px;
}

.creation-time {
    font-size: 12px;
    color: #8e8e93;
    font-weight: 400;
    letter-spacing: -0.06px;
}


/* ==================== 加载更多 ==================== */

.load-more {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    margin: 12px 0;
}

.loading-more {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 15px;
    color: #8e8e93;
    letter-spacing: -0.24px;
}

.mini-spinner {
    width: 16px;
    height: 16px;
    border: 1.5px solid rgba(60, 60, 67, 0.1);
    border-top: 1.5px solid #007AFF;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

.load-more-text {
    font-size: 17px;
    color: #007AFF;
    font-weight: 400;
    letter-spacing: -0.43px;
}


/* ==================== 底部间距 ==================== */

.bottom-spacing {
    height: 32px;
}


/* ==================== 适配深色模式 ==================== */

@media (prefers-color-scheme: dark) {
    .apple-container {
        background: #000000;
    }
    .ios-navbar {
        background: rgba(0, 0, 0, 0.9);
        border-bottom-color: rgba(84, 84, 88, 0.2);
    }
    .nav-title {
        color: #ffffff;
    }
    .booking-card {
        background: #1c1c1e;
        border-color: rgba(84, 84, 88, 0.2);
    }
    .room-name {
        color: #ffffff;
    }
    .detail-text {
        color: #ebebf5;
    }
}