/* 房间信息相关样式模块 */

/* 会议室信息区域 */
.room-info-section {
    background-color: #ffffff;
    margin: 16rpx 24rpx; /* 统一左右留白 */
    border-radius: 20rpx; /* 统一圆角 */
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

/* 会议室图片容器 */
.room-image-container {
    width: 100%;
    height: 220px;
    position: relative;
    background-color: #f8f8f8;
    overflow: hidden;
}

.room-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    background-color: #f8f8f8;
    transition: transform 0.3s ease;
}

.room-image:active {
    transform: scale(1.02);
}

.room-image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f8f8f8 0%, #eeeeee 100%);
}

.room-default-image {
    width: 80px;
    height: 80px;
    opacity: 0.4;
}

.image-loading-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(90deg, #f2f2f2 25%, #f8f8f8 37%, #f2f2f2 63%);
    background-size: 400% 100%;
    animation: shimmer 1.2s ease-in-out infinite;
}

@keyframes spin {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

.image-loading-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid #f3f3f3;
    border-top: 3px solid #007AFF;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes shimmer {
    0% { background-position: 100% 0; }
    100% { background-position: 0 0; }
}

/* 图片渐变遮罩与状态徽章 */
.image-gradient {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 40%;
    background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.35) 100%);
    pointer-events: none;
}

.image-status-badge {
    position: absolute;
    top: 12px;
    right: 12px;
    padding: 8rpx 14rpx;
    border-radius: 999px;
    color: #fff;
    font-size: 22rpx;
    font-weight: 600;
    box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.15);
}

.image-status-badge.available { background: linear-gradient(135deg, #34C759, #64D96E); }
.image-status-badge.full { background: linear-gradient(135deg, #FF9F0A, #FFC96B); }
.image-status-badge.unavailable { background: linear-gradient(135deg, #FF453A, #FF6961); }
.badge-text { opacity: 0.95; color: #fff; }

/* 会议室基本信息 */
.room-basic-info {
    padding: 20px;
}

.room-name {
    font-size: 24px;
    font-weight: 600;
    color: #333333;
    line-height: 1.3;
    margin-bottom: 12px;
    letter-spacing: -0.5px;
}

/* Meta 信息改为 Chip 风格 */
.meta-chips {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 16px;
}

.meta-chip {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    background: rgba(60, 60, 67, 0.06);
    border-radius: 999px;
    font-size: 12px;
    font-weight: 600;
    color: #1c1c1e;
}

.chip-icon {
    width: 14px;
    height: 14px;
    opacity: 0.8;
}

.chip-text {
    color: inherit;
}

/* 设备区域 */
.equipment-section {
    padding-top: 12px;
    border-top: 1px solid rgba(0, 0, 0, 0.06);
    background: transparent;
}

.equipment-title {
    font-size: 15px;
    font-weight: 600;
    color: #1c1c1e;
    opacity: 0.9;
}

/* 容器采用更优雅的 Chip 排列 */
.equipment-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 8px;
}

.equipment-tag {
    padding: 6px 12px;
    background: rgba(0, 122, 255, 0.08);
    color: #0A84FF;
    border: 1px solid rgba(10, 132, 255, 0.25);
    border-radius: 999px;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.2px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.04);
}

.equipment-text {
    color: inherit;
}

.equipment-tag.more-tag {
    background: rgba(60, 60, 67, 0.08);
    border-color: rgba(60, 60, 67, 0.15);
    color: #1c1c1e;
}

/* 设备展开/收起切换 - 更为内敛的样式与位置（右对齐） */
.toggle-eq {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 6px;
    margin-top: 6px;
}
.toggle-text {
    font-size: 12px;
    color: #6b7280;
}
.toggle-icon {
    width: 14px;
    height: 14px;
    opacity: 0.7;
    transition: transform 0.2s ease;
}
.toggle-icon.expanded {
    transform: rotate(180deg);
}

/* 深色模式优化 */
@media (prefers-color-scheme: dark) {
    .equipment-section {
        border-top-color: rgba(255, 255, 255, 0.08);
    }
    .equipment-title {
        color: #ffffff;
        opacity: 0.9;
    }
    .equipment-tag {
        background: rgba(10, 132, 255, 0.15);
        color: #64D2FF;
        border-color: rgba(10, 132, 255, 0.35);
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    }
}

/* 描述区域 */
.description-section {
    padding: 16px 0; /* 与上方标题、下方设备保持同样左右留白（由 .room-basic-info 提供） */
    border-top: 1px solid #f0f0f0;
}

.description-title {
    font-size: 16px;
    font-weight: 600;
    color: #333333;
    margin-bottom: 8px;
    display: block;
}

.description-text {
    font-size: 14px;
    color: #666666;
    line-height: 1.5;
    letter-spacing: 0.3px;
    display: block;
}

/* 深色模式优化 */
@media (prefers-color-scheme: dark) {
    .meta-chip {
        background: rgba(255, 255, 255, 0.12);
        color: #ffffff;
    }
}
