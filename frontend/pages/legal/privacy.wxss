page { background: #f6f8fb; min-height: 100vh; }
.page { font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', system-ui, sans-serif; }
.nav { position: fixed; left: 0; right: 0; top: 0; z-index: 20; }
.nav-inner { height: 44px; display: flex; align-items: center; justify-content: space-between; padding: 0 16px; backdrop-filter: blur(16px); -webkit-backdrop-filter: blur(16px); background: linear-gradient(120deg, rgba(255,255,255,0.9), rgba(240,245,255,0.85)); border-bottom: 0.5px solid rgba(255,255,255,0.6); box-shadow: 0 10rpx 24rpx rgba(15,23,42,0.05); }
.nav-left { width: 48rpx; height: 48rpx; display: flex; align-items: center; justify-content: flex-start; }
.nav-back { width: 36rpx; height: 36rpx; }
.nav-title-wrap { flex: 1; display: flex; justify-content: center; }
.nav-title { color: #1f2937; font-size: 34rpx; font-weight: 700; letter-spacing: .4rpx; }
.nav-right { width: 48rpx; }

.content { min-height: 100vh; padding: 12rpx 20rpx 40rpx; }
.section { margin-bottom: 24rpx; background: #ffffff; border-radius: 16rpx; padding: 18rpx; box-shadow: 0 10rpx 24rpx rgba(15,23,42,0.05); border: 1px solid rgba(255,255,255,0.8); }
.title { display: block; font-size: 30rpx; font-weight: 700; color: #111827; margin-bottom: 10rpx; }
.text { display: block; font-size: 26rpx; color: #4b5563; line-height: 1.6; }
