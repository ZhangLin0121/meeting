/* 日历组件样式 */
.calendar-container {
  background-color: #ffffff;
  border-radius: 16px;
  padding: 20px;
  margin: 16px 20px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

/* 日历头部 - 月份切换 */
.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding: 0 10px;
}

.month-nav {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 20px;
  background-color: #f8f9fa;
  transition: background-color 0.2s ease;
}

.month-nav:active {
  background-color: #e9ecef;
}

.nav-arrow {
  width: 20px;
  height: 20px;
  opacity: 0.7;
}

.month-display {
  flex: 1;
  text-align: center;
}

.month-text {
  font-size: 18px;
  font-weight: 600;
  color: #333333;
}

/* 加载状态 */
.calendar-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
}

.loading-spinner {
  width: 30px;
  height: 30px;
  border: 3px solid #f3f3f3;
  border-top: 3px solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 10px;
  font-size: 14px;
  color: #666666;
}

/* 星期标题 */
.weekdays-header {
  display: flex;
  margin-bottom: 10px;
}

.weekday-item {
  flex: 1;
  text-align: center;
  padding: 8px 0;
  font-size: 14px;
  font-weight: 500;
  color: #666666;
}

.weekday-item.weekend {
  color: #ff6b6b;
}

/* 日期网格 */
.calendar-grid {
  display: flex;
  flex-wrap: wrap;
}

.calendar-day {
  width: calc(100% / 7);
  height: 50px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: 8px;
  margin-bottom: 8px;
  transition: all 0.2s ease;
}

/* 日期数字 */
.day-number {
  font-size: 16px;
  font-weight: 500;
  z-index: 2;
}

/* 不同状态的日期样式 */
.calendar-day.other-month {
  opacity: 0.3;
}

.calendar-day.other-month .day-number {
  color: #cccccc;
}

.calendar-day.past-date {
  opacity: 0.5;
}

.calendar-day.past-date .day-number {
  color: #999999;
}

.calendar-day.available-date {
  cursor: pointer;
}

.calendar-day.available-date .day-number {
  color: #333333;
}

.calendar-day.available-date:active {
  background-color: #f0f9ff;
  transform: scale(0.95);
}

.calendar-day.full-date .day-number {
  color: #999999;
}

.calendar-day.unavailable-date .day-number {
  color: #cccccc;
}

/* 今天标记 */
.calendar-day.today {
  background-color: #e3f2fd;
}

.calendar-day.today .day-number {
  color: #1976d2;
  font-weight: 600;
}

.today-marker {
  position: absolute;
  top: 2px;
  right: 2px;
  background-color: #ff6b6b;
  color: white;
  font-size: 8px;
  padding: 1px 3px;
  border-radius: 4px;
  line-height: 1;
}

/* 选中状态 */
.calendar-day.selected {
  background-color: #007aff;
  transform: scale(1.05);
}

.calendar-day.selected .day-number {
  color: white;
  font-weight: 600;
}

.calendar-day.selected .today-marker {
  background-color: white;
  color: #007aff;
}

/* 可用性指示器 */
.availability-indicator {
  position: absolute;
  bottom: 3px;
  left: 50%;
  transform: translateX(-50%);
}

.indicator-dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
}

.indicator-dot.available {
  background-color: #52c41a;
}

.indicator-dot.full {
  background-color: #ff4d4f;
}

.indicator-dot.unavailable {
  background-color: #d9d9d9;
}

/* 选中状态下隐藏指示器 */
.calendar-day.selected .indicator-dot {
  background-color: rgba(255, 255, 255, 0.7);
}

/* 图例说明 */
.calendar-legend {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 16px;
  padding-top: 16px;
  border-top: 1px solid #f0f0f0;
  gap: 20px;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 6px;
}

.legend-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
}

.legend-dot.available {
  background-color: #52c41a;
}

.legend-dot.full {
  background-color: #ff4d4f;
}

.legend-dot.unavailable {
  background-color: #d9d9d9;
}

.legend-text {
  font-size: 12px;
  color: #666666;
}

/* 响应式设计 */
@media (max-width: 320px) {
  .calendar-day {
    height: 45px;
  }
  
  .day-number {
    font-size: 14px;
  }
  
  .calendar-legend {
    gap: 15px;
  }
  
  .legend-text {
    font-size: 11px;
  }
} 