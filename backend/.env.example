# Backend environment example

# HTTP server
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/meeting_room_booking

# Timezone
TIMEZONE=Asia/Shanghai

# Upload
UPLOAD_PATH=uploads
MAX_FILE_SIZE=20971520

# Booking window and limits
MAX_ADVANCE_DAYS=30
CANCEL_TIME_LIMIT_MINUTES=30
ADMIN_CANCEL_TIME_LIMIT_MINUTES=5

# WeChat mini-program credentials (set only in production)
# WECHAT_APP_ID=your_wechat_appid
# WECHAT_APP_SECRET=your_wechat_appsecret
# WECHAT_SUB_MSG_TEMPLATE_ID=your_subscription_template_id
# WECHAT_CANCEL_SUB_MSG_TEMPLATE_ID=your_cancel_template_id
# WECHAT_REMIND_SUB_MSG_TEMPLATE_ID=your_reminder_template_id

# Enable mock wechat login in development (1 to enable, 0 to disable)
MOCK_WECHAT_LOGIN=1

# Export download hardening
# EXPORT_DOWNLOAD_SECRET=change_this_secret_in_production
EXPORT_DOWNLOAD_TTL=3600
